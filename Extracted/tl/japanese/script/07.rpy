    avt "「先輩、フォローしてくれなくても大丈夫です。\nこれが不味いって事、オレもう知ってますから」"

# game/script/07.rpy:1348
translate japanese s07_04_lpdcat_ac561d7e:

    # voice voice_file.lpdcat(7,75)
