    # voice voice_file.lpd(3,10)
    # lpd angry_1 "「……漢人的神找麻煩。不聽。」"
    voice voice_file.lpd(3,10)
    lpd angry_1 "「……漢人の神の、言いがかり。なんか、聞かない」"

# game/script/03_day2.rpy:846
