    voice voice_file.lpdcat(4,94)
    lpdcat confused "「変な遼ちゃん」"

# game/script/04_week1.rpy:2690
translate japanese week1_sunday_lpdcat_lpd_41d29efc:

    # avt "「輪不到學長說！好啦，總之我們出發了。」"
    avt "「先輩には言われたくありません！\nよし、とにかく出掛けましょう」"

# game/script/04_week1.rpy:2692
translate japanese week1_sunday_lpdcat_lpd_ac160dbc:

    # lpd laugh "「……」"
    lpd laugh "「……」"

